---
import {
    GITHUB_PROFILE_LINK,
    MAILTO_LINK,
    LINKEDIN_PROFILE_LINK,
} from "../../i18n/ui";
import { getLangFromUrl, useTranslations } from "../../i18n/utils";
import GithubIcon from "../icons/Github.astro";
import LinkedInIcon from "../icons/LinkedIn.astro";
import MailForwardIcon from "../icons/MailForward.astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<footer
    class={"mt-12 md:mt-20 lg:mt-28 xl:mt-32 flex w-full flex-col items-start justify-center gap-8 text-xl font-bold md:w-4/5"}
>
    <div
        class={"flex w-full flex-col items-center justify-between xl:flex-row"}
    >
        <ul role="list" class="w-full flex flex-row justify-start items-center">
            <li>
                <span
                    class={"hidden w-full flex-row items-center justify-start gap-4 xl:inline-flex xl:justify-start"}
                >
                    {t("footer.companion.github")}
                    <a
                        class={"inline-flex flex-row items-center justify-center gap-2 py-4"}
                        href={GITHUB_PROFILE_LINK}
                        rel={"noopener noreferrer"}
                        role={"link"}
                        target={"_blank"}
                    >
                        <GithubIcon
                            class={"inline-block size-6"}
                            name={"icon"}
                        /> NewCastile
                    </a>
                </span>
            </li>
        </ul>
        <ul
            role="list"
            class={"flex w-full flex-col items-center justify-center gap-4 sm:flex-row xl:justify-end lg:gap-10"}
        >
            <li>
                <a
                    class={"px-2 py-4"}
                    href={MAILTO_LINK}
                    rel={"noopener noreferrer"}
                    target={"_blank"}
                >
                    <MailForwardIcon class={"inline-block size-10"} />
                    {t("footer.companion.mail")}
                </a>
            </li>
            <li>
                <a
                    class={"px-2 py-4"}
                    href={LINKEDIN_PROFILE_LINK}
                    rel={"noopener noreferrer"}
                    target={"_blank"}
                >
                    <LinkedInIcon class={"inline-block size-6"} />
                    LinkedIn
                </a>
            </li>
            <li>
                <a
                    class={"block px-2 py-4 xl:hidden"}
                    href={GITHUB_PROFILE_LINK}
                    rel={"noopener noreferrer"}
                    target={"_blank"}
                >
                    <GithubIcon class={"inline-block size-6"} />
                    Github
                </a>
            </li>
        </ul>
    </div>
</footer>
