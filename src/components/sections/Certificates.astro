---
import CertificateIcon from "../../components/icons/Certificate.astro";
import firstCertificate from "../../images/certificates/first-certificate.jpg";
import Certificate from "../sections/certificates/Certificate.astro";

interface Course {
  name: string;
  teachers: [string];
  certificateSrc: ImageMetadata;
  link: string;
}

const courses: Course[] = [
  {
    name: "React - Gu√≠a definitiva: hooks router redux next +Proyectos",
    teachers: ["Nicholas Schurmann"],
    certificateSrc: firstCertificate,
    link: "https://www.udemy.com/course/react-guia-definitiva-hooks-router-redux-next-proyectos",
  },
];
---

<section
  class={"flex w-full flex-col items-start justify-center gap-12 pt-28 md:w-4/5"}
  id={"certificates"}
>
  <h3
    class={"inline-flex w-full flex-row items-center justify-center gap-4 text-4xl md:justify-start"}
  >
    <CertificateIcon
      class={"hidden size-20 sm-mobile:inline-block"}
    />Certificados
  </h3>
  <div class={"flex w-full flex-col items-center justify-center gap-14"}>
    {
      courses.map((course) => {
        return <Certificate course={course} />;
      })
    }
  </div>
</section>
