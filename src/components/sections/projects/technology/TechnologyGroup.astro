---
import { Image } from "astro:assets";

interface TechnologyGroupItem {
    name: string;
    icon: {
        src: ImageMetadata;
        size: number;
    };
}

interface TechnologyGroup {
    name: string;
    items: Array<TechnologyGroupItem>;
}

type Props = {
    technologyGroup: TechnologyGroup;
};

const {
    technologyGroup: { items },
} = Astro.props;
---

<li
    class="flex flex-col justify-center items-start sm-mobile:items-center gap-6"
>
    <div class="flex flex-col sm-mobile:flex-row flex-wrap gap-2">
        {
            items.map((item) => {
                const {
                    icon: { size, src },
                    name,
                } = item;
                return (
                    <span class="font-semibold border-indigo-300 border text-gray-500 inline-flex items-center px-6 py-2 rounded-full gap-4 bg-violet-100">
                        <Image
                            width={size}
                            height={size}
                            src={src}
                            alt={`${name.toLowerCase()}-icon`}
                        />
                        {name}
                    </span>
                );
            })
        }
    </div>
</li>
