---
import LinkedInIcon from "../icons/LinkedIn.astro";
import Link from "../shared/Link.astro";
import MailForward from "../icons/MailForward.astro";
import GithubIcon from "../icons/Github.astro";
import { Image } from "astro:assets";

const GITHUB_PROFILE_LINK = "https://github.com/NewCastile";
const MAILTO_LINK = "mailto:carlosaguanipa1@gmail.com";
const LINKEDIN_PROFILE_LINK = "https://www.linkedin.com/in/cguanipa/";
---

<section
    id="home"
    class="flex flex-col items-start justify-center w-full gap-4 px-2 pt-20 lg:w-4/5 md:px-12"
>
    <div
        class="flex flex-col-reverse items-center justify-center gap-8 lg:flex-row"
    >
        <div class="flex flex-col items-center justify-center w-full gap-4">
            <h2
                class="w-full text-4xl text-center sm-mobile:text-5xl md:text-5xl lg:text-left"
            >
                Hola, soy Carlos
            </h2>
            <h3
                class="w-full text-xl text-center sm-mobile:text-3xl md:text-3xl lg:text-left"
            >
                Frontend Developer <br />React & NextJS
            </h3>
            <p
                class="hidden w-full text-xl text-center sm:w-3/4 md:w-full sm-mobile:block lg:text-left"
            >
                Constantemente investigando sobre las tecnologías que se van
                añadiendo al ecosistema de Javascript y el desarrollo web en
                general.
            </p>
        </div>
        <div
            class="flex flex-col items-center justify-center w-3/4 h-full sm:w-1/2"
        >
            <Image
                src={"https://avatars.githubusercontent.com/u/78671291?v=4"}
                class="p-0 rounded-full sm-mobile:p-4 ring-8 ring-indigo-300"
                alt={"profile-picture"}
                loading={"lazy"}
                width={250}
                height={250}
            />
        </div>
    </div>
    <div
        class="flex flex-col items-center justify-center w-full gap-4 lg:w-1/2"
    >
        <div
            class="flex flex-row items-center justify-center w-full gap-4 text-indigo-400 flex-nowrap lg:flex-wrap lg:justify-start"
        >
            <Link href={MAILTO_LINK}>
                <MailForward slot="icon" class="w-6 h-6" />
                <span class="hidden sm:inline-block">Contáctame</span>
            </Link>
            <Link href={LINKEDIN_PROFILE_LINK}>
                <LinkedInIcon slot="icon" class="w-6 h-6" />
                <span class="hidden sm:inline-block">LinkedIn</span>
            </Link>
            <Link href={GITHUB_PROFILE_LINK}>
                <GithubIcon slot="icon" class="w-6 h-6" />
                <span class="hidden sm:inline-block">Github</span>
            </Link>
        </div>
    </div>
</section>

<style>
    a {
        font-size: 1rem;
        padding: 0.5rem 0.8rem;
    }
</style>
