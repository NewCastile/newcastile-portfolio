---
import LinkedInIcon from "../icons/LinkedIn.astro";
import Link from "../shared/Link.astro";
import MailForward from "../icons/MailForward.astro";
import GithubIcon from "../icons/Github.astro";
import { Image } from "astro:assets";
import { getLangFromUrl, useTranslations } from "../../i18n/utils";
import {
    GITHUB_PROFILE_LINK,
    LINKEDIN_PROFILE_LINK,
    MAILTO_LINK,
    routes,
} from "../../i18n/ui";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const sectionId = routes[lang]["home"].replace("#", "");
---

<section
    class={"flex w-full flex-col items-start justify-center gap-4 px-2 pt-20 md:px-12 lg:w-4/5"}
    id={sectionId}
>
    <div
        class={"flex flex-col-reverse items-center justify-center gap-8 lg:flex-row"}
    >
        <div class={"flex w-full flex-col items-center justify-center gap-4"}>
            <h2
                class={"w-full text-center text-4xl dark:text-pink-400 sm-mobile:text-5xl md:text-5xl lg:text-left"}
            >
                {t("home.greet")}
            </h2>
            <h3
                class={"w-full text-center text-xl text-indigo-500 dark:text-yellow-200 sm-mobile:text-3xl md:text-3xl lg:text-left"}
            >
                {t("home.charge")}
                <br />React & NextJS
            </h3>
            <p
                class={"hidden w-full text-center text-xl sm-mobile:block sm:w-3/4 md:w-full lg:text-left"}
            >
                {t("home.description")}
            </p>
        </div>
        <div
            class={"flex h-full w-3/4 flex-col items-center justify-center sm:w-1/2"}
        >
            <Image
                alt={"profile-picture"}
                class={"rounded-full p-0 ring-8 ring-indigo-300 dark:ring-pink-500/60 sm-mobile:p-4"}
                height={250}
                loading={"lazy"}
                src={"https://avatars.githubusercontent.com/u/78671291?v=4"}
                width={250}
            />
        </div>
    </div>
    <div
        class={"flex w-full flex-col items-center justify-center gap-4 lg:w-1/2"}
    >
        <div
            class={"flex w-full flex-row flex-nowrap items-center justify-center gap-4 text-indigo-400 lg:flex-wrap lg:justify-start"}
        >
            <Link href={MAILTO_LINK}>
                <MailForward class={"size-6"} slot={"icon"} />
                <span class={"hidden sm:inline-block"}
                    >{t("home.links.companion.mail")}</span
                >
            </Link>
            <Link href={LINKEDIN_PROFILE_LINK}>
                <LinkedInIcon class={"size-6"} slot={"icon"} />
                <span class={"hidden sm:inline-block"}>LinkedIn</span>
            </Link>
            <Link href={GITHUB_PROFILE_LINK}>
                <GithubIcon class={"size-6"} slot={"icon"} />
                <span class={"hidden sm:inline-block"}>Github</span>
            </Link>
        </div>
    </div>
</section>

<style>
    a {
        font-size: 1rem;
        padding: 0.5rem 0.8rem;
    }
</style>
